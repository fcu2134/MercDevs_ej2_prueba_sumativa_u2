@model MercDevs_ej2.Models.Login
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Inicio de Sesión";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Login</div>
                    <div class="card-body">
                        <form asp-action="Index" method="post">
                            <div class="form-group">
                                <label for="Correo">Correo:</label>
                                <input type="email" class="form-control" id="Correo" name="Correo" asp-for="Correo" required />
                            </div>
                            <div class="form-group">
                                <label for="Password">Contraseña:</label>
                                <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required />
                            </div>
                            <button type="submit" class="btn btn-primary" name="action" value="login">Iniciar Sesión</button>
                            <button type="submit" class="btn btn-secondary" name="action" value="register">Registrar</button>
                        </form>

                        @if (ViewData["mensaje"] != null)
                        {
                            <div class="mt-3">
                                <p class="text-danger">@ViewData["mensaje"]</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
